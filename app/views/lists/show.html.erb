<div class="container">
  <h1><%= @list.name %></h1>

  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url%>)">
          <%= bookmark.movie.title %>
        </div>
      </li>
    <% end %>
  </ul>

  <%= link_to "My Lists", lists_path, class: "btn btn-secondary" %>
  <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>
